class Solution {
public:
    // Helper function: check if we can make at least m bouquets by 'day'
    bool canMakeBouquets(const std::vector<int>& nums, int day, int k, int m) {
        int bouquets = 0, count = 0;
        for (int bloomDay : nums) {
            if (bloomDay <= day) {
                count++;
                if (count == k) {
                    bouquets++;
                    count = 0; // reset after making a bouquet
                }
            } else {
                count = 0; // reset if rose not bloomed
            }
        }
        return bouquets >= m;
    }

    int roseGarden(int n, std::vector<int> nums, int k, int m) {
        long long totalRoses = 1LL * m * k;
        if (totalRoses > n) return -1; // not enough roses

        int low = *std::min_element(nums.begin(), nums.end());
        int high = *std::max_element(nums.begin(), nums.end());
        int ans = -1;

        while (low <= high) {
            int mid = low + (high - low) / 2;
            if (canMakeBouquets(nums, mid, k, m)) {
                ans = mid;
                high = mid - 1; // try fewer days
            } else {
                low = mid + 1; // need more days
            }
        }
        return ans;
    }
};
